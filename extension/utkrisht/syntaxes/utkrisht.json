{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Utkrisht",
    "patterns": [
        {
            "include": "#keywords"
        },
        {
            "include": "#comment"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#number"
        },
        {
            "include": "#constant"
        },
        {
            "include": "#function"
        },
        {
            "include": "#parameter"
        },
        {
            "include": "#variable"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control",
                    "match": "\\b(try|fix|when|else|loop|with|take|stop|next|exit|import|export)\\b"
                },
                {
                    "name": "constant.language",
                    "match": "\\b(right|wrong)\\b"
                }
            ]
        },
        "variable": {
            "patterns": [
                {
                    "name": "variable.name",
                    "match": "[a-z](?:[a-z]|[0-9]|-(?!-))*[a-z0-9]?"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.utkrisht",
                    "begin": "\"",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.definition.string.begin"
                        }
                    },
                    "end": "\"",
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.definition.string.end"
                        }
                    },
                    "patterns": [
                        {
                            "name": "constant.character.escape.utkrisht",
                            "match": "\\\\(\"|\\\\|n|r|t|b|f|v|0|x[0-9A-Fa-f]{2}|u[0-9A-Fa-f]{4}|u\\{[0-9A-Fa-f]+\\})"
                        },
                        {
                            "name": "string.interpolated.utkrisht",
                            "begin": "\\\\\\(",
                            "beginCaptures": {
                                "0": {
                                    "name": "punctuation.definition.template-expression.begin"
                                }
                            },
                            "end": "\\)",
                            "endCaptures": {
                                "0": {
                                    "name": "punctuation.definition.template-expression.end"
                                }
                            },
                            "patterns": [
                                {
                                    "include": "$self"
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        "comment": {
            "name": "comment",
            "begin": "#",
            "end": "\\n"
        },
        "number": {
            "patterns": [
                {
                    "name": "constant.numeric",
                    "match": "(?<=^|[^\\w-])-?\\d+(?:\\.\\d+)?(?=$|[^\\w-])"
                }
            ]
        },
        "function": {
            "patterns": [
                {
                    "name": "entity.name.function",
                    "match": "[a-z](?:[a-z]|[0-9]|-(?!-))*[a-z0-9]?(?= -\\d| +\\d|!| [a-z0-9\"\\[\\(])(?! with)"
                },
                {
                    "name": "entity.name.function",
                    "match": "(?<=^\\s*)[a-z](?:[a-z]|[0-9]|-(?!-))*[a-z0-9]? ~ *(\\{)"
                }
            ]
        },
        "parameter": {
            "patterns": [
                {
                    "name": "",
                    "match": "[a-z](?:[a-z0-9-]*[a-z0-9])?(?=:)"
                }
            ]
        }
    },
    "scopeName": "source.utkrisht"
}