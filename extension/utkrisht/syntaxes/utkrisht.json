{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Utkrisht",
    "patterns": [
        {
            "include": "#keywords"
        },
        {
            "include": "#comment"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#number"
        },
        {
            "include": "#constant"
        },
        {
            "include": "#function"
        },
        {
            "include": "#parameter"
        },
        {
            "include": "#variable"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control",
                    "match": "\\b(try|fix|end|when|else|loop|with|stop|next|exit|import|export)\\b"
                },
                {
                    "name": "constant.language",
                    "match": "\\b(right|wrong)\\b"
                }
            ]
        },
        "strings": {
            "name": "string.quoted.double",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape",
                    "match": "\\\\."
                }
            ]
        },
        "comment": {
            "name": "comment",
            "begin": "#",
            "end": "\\n"
        },
        "number": {
            "patterns": [
                {
                    "name": "constant.numeric",
                    "match": "(?<=^|[^\\w-])-?\\d+(?:\\.\\d+)?(?=$|[^\\w-])"
                }
            ]
        },
        "variable": {
            "patterns": [
                {
                    "name": "variable.name",
                    "match": "[a-z](?:[a-z0-9-]*[a-z0-9])?"
                }
            ]
        },
        "function": {
            "patterns": [
                {
                    "name": "entity.name.function",
                    "match": "[a-z](?:[a-z0-9-]*[a-z0-9])?(?=[ ;(\n)](?!!>|=|with|~|\\+))"
                }
            ]
        },
        "parameter": {
            "patterns": [
                {
                    "name": "",
                    "match": "[a-z](?:[a-z0-9-]*[a-z0-9])?(?= ~)"
                }
            ]
        }
    },
    "scopeName": "source.utkrisht"
}